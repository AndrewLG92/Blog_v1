@model Blog.Web.Models.ViewModels.UpdateTagViewModel

<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input type="text" class="form-control" id="id" asp-for="Id" readonly="readonly" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" id="name" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <button type="submit" asp-action="UpdateTag" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>