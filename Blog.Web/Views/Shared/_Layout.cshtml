<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layoutstyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />
    <script src="https://cdn.tiny.cloud/1/nvjosfikqmue8yhelv48yf2y1goqm7bu9s3qx31gucu7qpn2/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/TinyMCE_Custom_Config.js"></script>
    
</head>
<body>
    <header class="mb-5 pb-5">
        <nav class="navbar bg-primary fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <i class="bi bi-caret-right-square text-white"></i>
                    <i class="bi bi-caret-down-square text-white visually-hidden"></i>
                </button>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Blog</a>
                
                <div class="offcanvas rounded offcanvas-start test-class" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Blog</a>
                        </h5>
                        @* <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button> *@
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="AdminTags" asp-action="TagsDisplay">Tags</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="AdminPosts" asp-action="AddBlogs">Posts</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="AdminBlogCategory" asp-action="IndexCat">Categories</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Blog.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
