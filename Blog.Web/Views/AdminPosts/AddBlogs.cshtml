@model Blog.Web.Models.ViewModels.AddBlogRequestViewModel
@{
}



<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container text-center">
        <h1>
            Add New Blog - Admin Functionality
        </h1>
    </div>
</div>

<div class="container py-5 w-50">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" class="form-control" name="heading" id="heading" asp-for="Heading" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Page Title</label>
            <input type="text" class="form-control" name="pageTitle" id="pageTitle" asp-for="PageTitle" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea type="text" class="form-control" name="content" id="tiny" asp-for="Content"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Url Handle</label>
            <input type="text" class="form-control" id="urlHandle" name="urlHandle" asp-for="UrlHandle" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Published Date</label> 
            <input type="date" class="form-control" id="publishedDate" name="publishedDate" asp-for="PublishedDate" required/>
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" id="author" name="author" asp-for="Author" required/>
        </div>
        

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select class="form-select" aria-label="Default select example" id="category" required>
                <option selected>Select Category</option>
                @foreach (var item in Model.BlogCategories)
                {
                    <option value="@item.Name">@item.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Tags</label>
            <select class="form-select" aria-label="Default select example" id="tags" required>
                <option selected>Select Tag</option>
                @foreach(var item in Model.Tags)
                {
                    <option value="@item.Name">@item.Name</option>
                }
            </select>
        </div>

        <div class="btn-group pb-3" role="group" aria-label="Basic checkbox toggle button group">
            <input type="checkbox" class="btn-check" id="visible" autocomplete="off" name="visible" asp-for="Visible" required />
            <label class="btn btn-outline-primary" for="visible">Visible</label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    
</div>