@model List<Blog.Web.Models.Domain.BlogCategory>
@{
    ViewData["Title"] = "Categories";
}

<form class="container">
    <div class="row mt-2">
        <h3 class="col">@ViewData["Title"]</h3>
        <button class="btn btn-primary col-2" asp-area="" asp-controller="AdminBlogCategory" asp-action="AddCat">Add Category</button>
    </div>
    <hr />
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table-active">
                <th>Id</th>
                <th>Name</th>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-primary" asp-controller="AdminBlogCategory" asp-action="EditCat" asp-route-id="@item.Id" asp-area="">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>