@model Blog.Web.Models.ViewModels.UpdateCategoryViewModel

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Update Category
        </h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="name" asp-for="Id" readonly="readonly" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <button type="submit" asp-controller="AdminBlogCategory" asp-action="UpdateCat" class="btn btn-primary">Update</button>
            <button class="btn btn-danger" asp-controller="AdminBlogCategory" asp-action="DeleteCat" asp-area="">Delete</button>
        </div>
    </form>
</div>