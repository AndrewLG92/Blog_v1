@model Blog.Web.Models.ViewModels.UpdateCategoryViewModel

@{
}


<form method="post">
    <div class="form-group">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="name" asp-for="Id" readonly="readonly" />
        </div>
    </div>
    <div class="form-group">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="mb-3">
                <button type="submit" asp-controller="AdminCategory" asp-action="UpdateCat" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>